{
  "manifest_version": 3,
  "name": "SMPL-1",
  "version": "1.0.0",
  "description": "SMPL-1: A Chrome extension audio sampler with waveform visualization for recording and manipulating browser audio",
  "icons": {
    "16": "assets/record-btn.png",
    "48": "assets/record-btn.png",
    "128": "assets/record-btn.png"
  },
  "action": {
    "default_title": "Open SMPL-1",
    "default_icon": {
      "16": "assets/record-btn.png",
      "48": "assets/record-btn.png",
      "128": "assets/record-btn.png"
    }
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["storage", "sidePanel", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
